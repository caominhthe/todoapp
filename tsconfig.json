{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "tests": [
        "__tests__/*"
      ],
      "@root": [
        "."
      ],
      "@root/*": [
        "./*"
      ],
      "@types": [
        "src/types"
      ],
      "@store": [
        "src/store"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@components": [
        "src/components"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@utils": [
        "src/utils"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@selectors/*": [
        "src/selector/*"
      ],
      "@routers": [
        "src/routers"
      ],
      "@routers/*": [
        "src/routers/*"
      ],
      "@constants": [
        "src/constants"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@hooks": [
        "src/hooks"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@assets": [
        "./assets"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@screens": [
        "src/screens"
      ],
      "@screens/": [
        "src/screens/*"
      ],
      "@selectors": [
        "src/selectors"
      ],
      "@selectors/": [
        "src/selectors/*"
      ],
      "@theme": [
        "src/theme"
      ],
      "@theme/": [
        "src/theme/*"
      ]
    }
  },
  "files": [
    "./node_modules/redux-persist/types/storage/index.d.ts",
    "./node_modules/redux-persist/types/integration/react.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
